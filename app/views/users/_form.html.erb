<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :kana_name %>
    <%= f.input :mail_address %>
    <%= f.input :sex %>
    <%= f.input :age %>
    <%= f.input :birthday %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
